@using Ecommerce.Models.ViewModels
@model CustomerCreateViewModel
    <div class="card">
        <div class="card-header">
            <h1 class="text-success"> Customer Create</h1>
        </div>
        <div class="card-body col-md-5">
            <form method="post">
                <div class="form-group">
                    <label class="text-danger" for="Name">Name<span class="must-required"><strong>&nbsp; *</strong></span></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="name" autofocus />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Phone" class="text-danger">PhoneNo</label>
                    <input type="text" asp-for="Phone" class="form-control" placeholder="phoneNumber" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Address" class="text-danger">Address</label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="address" />
                    <span asp-validation-for="Address"class="text-danger"></span>
                </div>
                
                <br />
                <input type="submit"value="Submit" class="btn btn-primary fa-pull-right" />
            </form>

        </div>

    </div>
<partial name="~/Views/Shared/PartialViews/Customer/_CustomerList.cshtml" model="Model.CustomerList"/>
